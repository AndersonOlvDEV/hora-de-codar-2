programa
{
  funcao inicio()
  {
    real n1, n2, n3, n4
    real maior

    // Lê os quatro valores
    escreva("Digite o primeiro número: ")
    leia(n1)
    escreva("Digite o segundo número: ")
    leia(n2)
    escreva("Digite o terceiro número: ")
    leia(n3)
    escreva("Digite o quarto número: ")
    leia(n4)

    // Encontra o maior número
    maior = n1
    se (n2 > maior)
    {
      maior = n2
    }
    se (n3 > maior)
    {
      maior = n3
    }
    se (n4 > maior)
    {
      maior = n4
    }

    // Exibe os valores solicitados
    escreva("\n")
    escreva("O primeiro número digitado foi: ", n1, "\n")
    escreva("O último número digitado foi: ", n4, "\n")
    escreva("O maior número de todos foi: ", maior, "\n")
  }
}
