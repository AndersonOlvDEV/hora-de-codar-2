programa
{
  funcao inicio()
  {
    real altura, peso_ideal
    inteiro genero

    // Solicita a altura
    escreva("Digite a sua altura em metros (ex: 1.75): ")
    leia(altura)

    // Solicita o gênero
    escreva("Digite o seu gênero:\n")
    escreva("1 - Feminino\n")
    escreva("2 - Masculino\n")
    leia(genero)

    // Calcula o peso ideal com base no gênero
    se (genero == 1)
    {
      peso_ideal = (62.1 * altura) - 44.7
      escreva("\nSeu peso ideal é: ", peso_ideal, " kg.")
    }
    senao se (genero == 2)
    {
      peso_ideal = (72.7 * altura) - 58
      escreva("\nSeu peso ideal é: ", peso_ideal, " kg.")
    }
    senao
    {
      escreva("\nOpção de gênero inválida.")
    }
  }
}
