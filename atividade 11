programa
{
  funcao inicio()
  {
    inteiro valor1, valor2, operacao
    real resultado

    // Solicita os dois valores
    escreva("Digite o primeiro valor inteiro: ")
    leia(valor1)
    escreva("Digite o segundo valor inteiro: ")
    leia(valor2)
    
    // Solicita a operação
    escreva("\nEscolha a operação a ser realizada:\n")
    escreva("1 - Adição\n")
    escreva("2 - Subtração\n")
    escreva("3 - Divisão\n")
    escreva("4 - Multiplicação\n")
    leia(operacao)

    // Realiza a operação com base na escolha do usuário
    se (operacao == 1)
    {
      resultado = valor1 + valor2
      escreva("\nO resultado da Adição é: ", resultado)
    }
    senao se (operacao == 2)
    {
      resultado = valor1 - valor2
      escreva("\nO resultado da Subtração é: ", resultado)
    }
    senao se (operacao == 3)
    {
      resultado = valor1 / valor2
      escreva("\nO resultado da Divisão é: ", resultado)
    }
    senao se (operacao == 4)
    {
      resultado = valor1 * valor2
      escreva("\nO resultado da Multiplicação é: ", resultado)
    }
    senao
    {
      escreva("\nOpção de operação inválida. Por favor, escolha entre 1 e 4.")
    }
  }
}
