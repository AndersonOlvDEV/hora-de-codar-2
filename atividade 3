programa
{
  funcao inicio()
  {
    real n1, n2, n3
    real maior

    escreva("Digite o primeiro número: ")
    leia(n1)

    escreva("Digite o segundo número: ")
    leia(n2)

    escreva("Digite o terceiro número: ")
    leia(n3)

    // Assumimos que o primeiro número é o maior
    maior = n1

    // Verificamos se o segundo número é maior que o "maior" atual
    se (n2 > maior)
    {
      maior = n2
    }

    // Verificamos se o terceiro número é maior que o "maior" atual
    se (n3 > maior)
    {
      maior = n3
    }

    escreva("O maior número é: ", maior)
  }
}
